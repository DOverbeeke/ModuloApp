<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ModuloReloaded6.RoosterTest3">
  <ContentPage.Content>
    <StackLayout>
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="DayButton" Grid.Column="0" Text="Day" TextColor="GhostWhite" Clicked="DayButtonClicked"/>
        <Button x:Name="WeekButton" Grid.Column="1" Text="Week" TextColor="GhostWhite" Clicked="WeekButtonClicked"/>
      </Grid>
      
      <Label x:Name="DateLabel"
                HorizontalOptions="Center" />

      
      
      <ScrollView VerticalOptions="Fill" Margin="5,0,5,5">
        <Grid x:Name="TestGrid" RowSpacing="0" ColumnSpacing="0">
          
        </Grid>
      </ScrollView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>
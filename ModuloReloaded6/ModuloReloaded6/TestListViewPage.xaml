<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ModuloReloaded6.TestListViewPage">
  <ContentPage.Content>
    <StackLayout>
      <Label Text="TestListViewPage :D"/>
      <ListView x:Name="LView">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Text="{Binding Name}" TextColor="Green" BackgroundColor="Purple"/>
                <Label Grid.Column="1" Text="{Binding RaccaCauwa}" TextColor="Green" BackgroundColor="Purple" HorizontalTextAlignment="End"/>
              </Grid>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>